<div class="mt-6">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="mt-5 md:mt-0 md:col-span-3">
      <form action="#" method="POST">
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-1 sm:col-span-1">
                <label for="username" class="block text-sm font-medium leading-5 text-gray-700">
                  First Name
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= form.text_field :first_name, autofocus: true, class: "form-input rounded-md flex-1 block w-full rounded-none rounded-r-md transition duration-150 ease-in-out sm:text-sm sm:leading-5"  %>
                </div>
              </div>
              <div class="col-span-1 sm:col-span-1">
                <label for="username" class="block text-sm font-medium leading-5 text-gray-700">
                  Last Name
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= form.text_field :last_name, autofocus: true, class: "form-input rounded-md flex-1 block w-full rounded-none rounded-r-md transition duration-150 ease-in-out sm:text-sm sm:leading-5"  %>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-3 gap-6 mt-4">
              <div class="col-span-1 sm:col-span-1">
                <label for="username" class="block text-sm font-medium leading-5 text-gray-700">
                  Email Address
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= form.text_field :email, autofocus: true, class: "form-input rounded-md flex-1 block w-full rounded-none rounded-r-md transition duration-150 ease-in-out sm:text-sm sm:leading-5"  %>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-6 gap-6 mt-4">
              <div class="col-span-1 sm:col-span-1">
                <label for="username" class="block text-sm font-medium leading-5 text-gray-700">
                  Admin?
                </label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= select(:user, :admin, [['No', false], ['Yes', true]], { selected: @user.admin }, { class: 'block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5' }) %>
                </div>
              </div>
            </div>

            <div>
              <label for="username" class="mt-4 block text-sm font-medium leading-5 text-gray-700 mb-4">
                Permissions
              </label>
              <div class="grid grid-cols-8 gap-6 mt-1 bg-gray-50">
                <div class="p-4 col-span-2 sm:col-span-2">
                  <div>
                    <label class="block text-sm font-medium leading-5 text-gray-700 ">Dashboard</label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <%= form.select 'permissions[][dashboard]', [['Cannot View', '0'], ['Can View', '1']], { selected: @dashboard_permission }, { class: 'block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5'} %>
                    </div>
                  </div>
                </div>
                <div class="p-4 col-span-2 sm:col-span-2">
                  <div>
                    <label class="block text-sm font-medium leading-5 text-gray-700 ">Forecasting</label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <%= form.select 'permissions[][forecasting]', [['View/Edit Themselves', 0], ['View Others', 1], ['View/Edit Others', 2]], { selected: @forecasting_permission }, { class: 'block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5' } %>
                    </div>
                  </div>
                </div>
                <div class="p-4 col-span-2 sm:col-span-2">
                  <div>
                    <label class="block text-sm font-medium leading-5 text-gray-700 ">Projects</label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <%= form.select 'permissions[][projects]', [['Cannot View', 0], ['Can View', 1], ['Can Edit', 2]], { selected: @projects_permission }, { class: 'block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5' } %>
                    </div>
                  </div>
                </div>
                <div class="p-4 col-span-2 sm:col-span-2">
                  <div>
                    <label class="block text-sm font-medium leading-5 text-gray-700 ">Team Members</label>
                    <div class="mt-1 flex rounded-md shadow-sm">
                      <%= form.select 'permissions[][team]', [['Cannot View', 0], ['Can View', 1], ['Can Edit', 2]], { selected: @team_permission }, { class: 'block form-select w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5' } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-left sm:px-6">
            <span class="inline-flex rounded-md shadow-sm">
              <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-red-600 hover:bg-red-500 focus:outline-none focus:border-red-700 focus:shadow-outline-red active:bg-red-700 transition duration-150 ease-in-out">
                <%= button_text %>
              </button>
            </span>
            <span class="inline-flex rounded-md shadow-sm">
              <%= link_to "Cancel", company_users_path, class: 'inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-gray-600 bg-white hover:text-gray-500 focus:outline-none focus:border-red-700 focus:shadow-outline-red active:bg-red-700 transition duration-150 ease-in-out ml-3' %>
            </span>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
