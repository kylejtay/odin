<%
  value = 0
  query = billable_hours.select{ |te| te.start_time >= start_time - 1.day && te.start_time <= start_time }.first
  value = query.hours.to_s.sub(/\.?0+$/, '') if query.present?
%>
<input name="billable_hours[<%= user.id %>][<%= project_id %>][<%= start_time %>][hours][]" onclick="this.select()" class="form-input block w-full text-xs text-center leading-2" placeholder="HH:mm" value="<%= value %>" <%= "disabled" if start_time > Time.now %> />
