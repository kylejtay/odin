<%
  value = 0
  query = time_entries.select{ |te| te.start_time > start_time - 1.day && te.start_time <= start_time }.first
  value = query.hours.to_s.sub(/\.?0+$/, '') if query.present?
%>
<input name="time_entries[<%= user.id %>][<%= task.id %>][<%= start_time %>][hours][]" onclick="this.select()" class="form-input block w-full text-xs text-center leading-2 <%= 'filled' if value.to_i > 0 %> <%= task.billable? ? 'billable' : 'non-billable' %>" placeholder="HH:mm" value="<%= value %>" <%= "disabled" if start_time > Time.now %> />
